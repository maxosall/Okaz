@if (ShowConfirmation)
{
  <div id="popup-modal" tabindex="-1" style="background-color: #00000080" class="fixed top-0 left-0 right-0 z-50 flex justify-center overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%)] max-h-full">
    <div class="relative w-full max-w-md max-h-full top-[5rem]">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <button @onclick="()=> OnConfirmationChanged(false)" type="button" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="crypto-modal">

          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
                <span class="sr-only">Close modal</span>
        </button>

      <!-- Modal header -->
        <div class="px-6 py-2 border-b rounded-t dark:border-gray-600">
        <h3 class="text-sm font-semibold text-gray-900 lg:text-xl dark:text-white">
                    @Heading
                </h3>
        </div>



              <div class="p-6 text-center">
                  <svg class="mx-auto mb-3 text-gray-400 w-6 h-6 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                  </svg>
                  <h3 class="mb-4 text-lg font-normal text-gray-500 dark:text-gray-400">@Message</h3>

                  <button type="button"
                  @onclick="()=> OnConfirmationChanged(true)" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded text-sm inline-flex items-center px-2.5 py-2 text-center mr-2">
                      Yes, Delete
                  </button>

                  <button type="button"
                    @onclick="()=> OnConfirmationChanged(false)" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded border border-gray-200 text-sm font-medium px-2.5 py-2 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">No, cancel</button>
              </div>
          </div>
      </div>
  </div>
}
