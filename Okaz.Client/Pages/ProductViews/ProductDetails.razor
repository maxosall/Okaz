@page "/prodcuts-details/{id}"
@inherits ProductDetailsBase
 
<PageTitle>Product Details</PageTitle>
<div class="grid grid-cols-1 md:grid-cols-12 gap-2 pb-2 my-auto border-b border-gray-200 px-6  md:px-0">
	  <h1 class="col-span-1 md:col-span-4 text-lg font-bold text-left  border-0 outline-0">Product details </h1>

	  <div class="col-span-1 md:col-span-8 flex gap-2">
		<NavLink href="/"class="font-medium py-2 px-2  text-gray-700 hover:text-blue-700 underline text-sm">Back</NavLink> 

  		<NavLink href="@($"/product-edit/{Product?.ProductId}")"
  			class="font-medium py-2 px-2 text-gray-700 hover:text-green-700 underline text-sm">Edit</NavLink> 

  		<NavLink href=""class="font-medium py-2 px-2  text-gray-700 hover:text-red-700 underline text-sm">Delete</NavLink>
	</div>
</div>
@if(string.IsNullOrWhiteSpace(ErrorMessage) == false)
{
	<h1 class="text-red-800 font-extrabold">@ErrorMessage</h1>
}
else if (Product is null )
{
	<Spinner/>
}
else
{
	<div class="grid grid-cols-1 md:grid-cols-12 gap-4 px-6 py-6 md:px-0 ">
	  <figure class="col-span-1 md:col-span-4 rounded-lg border bg-cover bg-center  h-[15rem] max-h-screen" style="background-image: url('@Product.ImageUrl') ">
	  </figure>

  	<div class="col-span-1 md:col-span-8 flex flex-col gap-4">
  	
		<h3 class="font-extrabold text-2xl">@Product.Name</h3>
		<p class="font-bold text-lg"> @Product.Price $ </p>

		@if ( Product.CategoryName == null ){
		  <p>Catergory: N/A</p> 
		}else{
		  <p class="">Catergory: <a href="#" class="bg-blue-100 hover:bg-blue-200 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300">@Product.CategoryName</a></p>
		}
		<h3 class="font-extrabold text-blue-800">Description:</h3>
		<p>@Product.Description</p>
	  </div>	
	</div>

}
